table {
  @apply w-full;
  @apply border;
  @apply border-solid;
  @apply border-transparent;
  @apply rounded;
  @apply border-separate;
  border-spacing: 0;
}

td,
th {
  @apply border-b;
  @apply border-solid;
  @apply border-gray-300;
  @apply py-2;
  @apply px-3;
  @apply align-top;
}

th {
  @apply font-bold;
  @apply border-0;
  @apply border-b-2;
  @apply text-left;
}
