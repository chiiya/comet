{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "esModuleInterop": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2015",
      "es2017",
      "es2018"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
